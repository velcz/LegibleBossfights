Keybinds: {
	"Toggle Cursor Line.DisplayName": 切换光标指示线
	"Toggle Projectile Highlights.DisplayName": 切换弹幕高亮
	"Toggle Transparent Friendly Projectiles.DisplayName": 切换友方弹幕透明度
	"Toggle Hide Walls.DisplayName": 切换隐藏墙壁
}

Messages: {
